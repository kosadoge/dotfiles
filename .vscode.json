{
    "window.nativeTabs": true,
    "workbench.startupEditor": "none",
    "workbench.editor.untitled.hint": "hidden",

    // Editor
    "editor.minimap.enabled": false,
    "editor.rulers": [120],
    "editor.bracketPairColorization.enabled": false,
    "editor.fontFamily": "Iosevka Extended",
    "editor.fontSize": 16,

    // Terminal
    "terminal.integrated.fontSize": 16,
    "terminal.integrated.fontFamily": "Iosevka Nerd Font",

    // Theme
    "gruvboxMaterial.darkContrast": "hard",
    "gruvboxMaterial.darkWorkbench": "high-contrast",
    "workbench.colorTheme": "Gruvbox Material Dark",
    "workbench.colorCustomizations": {
        "editor.selectionBackground": "#504945",
        "editor.selectionHighlightBackground": "#504945aa",
        "editor.inactiveSelectionBackground": "#504945aa",
    },

    // Go
    "go.toolsManagement.autoUpdate": true,
    "go.testFlags": ["-v"],

    // Protobuf
    "clang-format.language.proto.style": "{ IndentWidth: 4, BasedOnStyle: google, AlignConsecutiveAssignments: true, ColumnLimit: 0 }",
    "[proto3]": {
        "editor.defaultFormatter": "xaver.clang-format"
    },

    // Javascript
    "[javascript]": {
        "editor.defaultFormatter": "vscode.typescript-language-features"
    },

    // YAML
    "yaml.schemaStore.enable": false,
    
    // Shit
    "redhat.telemetry.enabled": false,
    "errorLens.enabledDiagnosticLevels": [
        "warning",
        "info"
    ],
}
